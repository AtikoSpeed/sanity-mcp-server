{
  "extends": "../node_modules/@sanity/pkg-utils/tsconfig/strictest.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "outDir": "../dist",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDir": "../src",
    "noPropertyAccessFromIndexSignature": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["../src/**/*"],
  "exclude": ["../node_modules", "../dist", "../test"]
}

{
  "name": "sanity-mcp-server",
  "version": "0.1.3",
  "description": "Model Context Protocol server for Sanity.io",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc -w & node --watch dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run test/unit",
    "typecheck": "tsc --noEmit",
    "typecheck:test": "tsc --noEmit --project config/tsconfig.test.json",
    "typecheck:all": "npm run typecheck && npm run typecheck:test",
    "test:ts": "tsc && vitest run",
    "test:integration": "vitest run test/integration",
    "test:core": "vitest run test/integration/critical/core-document-operations.test.ts",
    "test:integration:critical": "vitest run test/integration/critical",
    "test:integration:standard": "vitest run test/integration/standard",
    "test:integration:extended": "vitest run test/integration/extended",
    "test:controllers": "vitest run test/controllers",
    "test:pre-commit": "npm run test:unit && npm run test:core",
    "test:pre-merge": "npm run test:unit && npm run test:integration:critical && npm run test:integration:standard",
    "test:all": "npm run test",
    "lint": "eslint . --ext .ts --config config/.eslintrc.json",
    "lint:fix": "eslint . --ext .ts --config config/.eslintrc.json --fix",
    "find:duplicates": "jscpd src --reporters html --output scripts/quality/output",
    "complexity": "eslint . --ext .ts --config config/.eslintrc.json --rule 'complexity: [\"error\", 10]' --rule 'sonarjs/cognitive-complexity: [\"error\", 10]' -f json > scripts/quality/output/complexity-report.json || true",
    "quality:check": "npm run lint && npm run complexity && npm run find:duplicates && npm run test:coverage",
    "quality:checkpoint": "node scripts/quality/generate-quality-checkpoint.js",
    "quality:chart": "node scripts/quality/generate-quality-chart.js",
    "quality:update-readme": "node scripts/quality/update-readme-metrics.js",
    "quality:report": "npm run quality:check && node scripts/quality/prioritize-improvements.js && npm run quality:checkpoint && npm run quality:chart && npm run quality:update-readme && echo '\nQuality report generated: scripts/quality/output/improvement-recommendations.md\nQuality metrics updated in README.md\nQuality metrics chart available at: scripts/quality/output/quality-metrics-chart.html'",
    "prerelease": "echo 'Skipping tests for release'",
    "release": "npm run build && npm version patch && npm run quality:update-readme -- --tagged --tag v$(node -p \"require('./package.json').version\") && git add README.md && git commit -m \"Update quality metrics in README\" && git push",
    "prepare": "husky install"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "@sanity/client": "^6.12.3",
    "dotenv": "^16.3.1",
    "marked": "^9.1.5",
    "marked-gfm-heading-id": "^3.1.0",
    "node-fetch": "^3.3.2",
    "openai": "^4.28.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.3"
  },
  "bin": {
    "sanity-mcp-server": "./dist/index.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.20",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.14",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vitest/coverage-v8": "^3.0.8",
    "axios": "^1.8.1",
    "eslint": "^8.52.0",
    "eslint-plugin-complexity": "^1.0.2",
    "eslint-plugin-sonarjs": "^3.0.2",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "typescript": "^5.3.3",
    "typhonjs-escomplex": "^0.1.0",
    "uuid": "^11.1.0",
    "vitest": "^3.0.7"
  }
}

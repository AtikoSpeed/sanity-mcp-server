{
  "name": "sanity-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Sanity.io",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc -w & node --watch dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "typecheck:test": "tsc --noEmit --project tsconfig.test.json",
    "typecheck:all": "npm run typecheck && npm run typecheck:test",
    "test:ts": "tsc && vitest run"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "@sanity/client": "^6.12.3",
    "dotenv": "^16.3.1",
    "marked": "^9.1.5",
    "marked-gfm-heading-id": "^3.1.0",
    "node-fetch": "^3.3.2",
    "openai": "^4.28.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.3"
  },
  "bin": {
    "sanity-mcp-server": "./dist/index.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.20",
    "@types/ws": "^8.5.14",
    "typescript": "^5.3.3",
    "vitest": "^3.0.7"
  }
}
